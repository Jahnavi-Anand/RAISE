    investorForm.addEventListener("submit", function(e) {
        e.preventDefault();
        // Grab form data and post to relevant endpoint via fetch/AJAX
    });
    entrepreneurForm.addEventListener("submit", function(e) {
        e.preventDefault();
        // Grab form data and post to relevant endpoint via fetch/AJAX
    });
    */
    </script>
</body>
</html>
